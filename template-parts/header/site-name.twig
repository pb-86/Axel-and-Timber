<div class="axel-site-name">
	{% if(fn('is_front_page') or fn('is_home')) %}
		<h1 class="axel-site-name__title">
	{% endif %}

	{# Site name #}
	<a class="axel-site-name__link" href="{{ site.url|e('esc_url') }}">
		{{ site.name|e('esc_html') }}
	</a>

	{% if(fn('is_front_page') or fn('is_home')) %}
		</h1>
	{% endif %}

	{# Site description #}
	<div class="axel-site-name__description">
		{{ site.description|e('esc_html') }}
	</div>
</div>